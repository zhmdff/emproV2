<%- include('./includes/head') %>
<%- include('./includes/aside', { path: path }) %>
<%- include('./includes/navbar') %>

<!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    
    
  <h4 class="py-3 mb-4"><span class="text-muted fw-light">Group/</span> Add Group</h4>

  <div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
      <div class="card mb-4">
        <div class="card-body">
          <form action="/admin/group/add" method="POST">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="name">Name</label>
                <div class="col-sm-10">
                    <input type="text" name="name" class="form-control" id="name" placeholder="Ad..." required />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="number">Number</label>
                <div class="col-sm-10">
                    <input type="text" name="number" class="form-control" id="number" placeholder="Soyad..." required />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="specialty">Specialty</label>
                <div class="col-sm-10">
                    <input type="text" name="specialty" class="form-control" id="specialty" placeholder="Specialty..." required />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="type">Type</label>
                <div class="col-sm-10">
                    <select name="type" class="form-select" id="type" required>
                        <option value="" disabled selected>Select Type</option>
                        <option value="distant">Distant</option>
                        <option value="real">Real</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
              <label class="col-sm-2 col-form-label" for="start_year">Start Year</label>
              <div class="col-sm-10">
                  <input type="number" name="start_year" class="form-control" id="start_year" placeholder="YYYY" min="1900" max="2100" required />
              </div>
          </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="graduation_year">Graduation Year</label>
                <div class="col-sm-10">
                    <input type="number" name="graduation_year" class="form-control" id="graduation_year" placeholder="YYYY" min="1900" max="2100" required />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="is_active">Is Active</label>
                <div class="col-sm-10">
                    <input type="checkbox" name="is_active" id="is_active" checked />
                    <label for="is_active">Active</label>
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </div>
          </form>
        </div>
      </div>
    </div>
</div>


</div>
<!-- / Content -->

