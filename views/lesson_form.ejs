<%- include('./includes/head') %>
<%- include('./includes/aside', { path: path }) %>
<%- include('./includes/navbar') %>

<!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    
    
  <h4 class="py-3 mb-4"><span class="text-muted fw-light">Lesson/</span> Add Lesson</h4>

  <!-- Basic Layout & Basic with Icons -->
  <div class="row">
    <!-- Basic Layout -->
    <div class="col-xxl">
      <div class="card mb-4">
        <div class="card-body">
            <form action="/admin/lesson/add" method="POST">
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label" for="lesson_name">Name</label>
                  <div class="col-sm-10">
                    <input type="text" name="lesson_name" class="form-control" id="lesson_name" placeholder="Ad..." />
                  </div>
                </div>

                
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label" for="lesson_faculty">Faculty</label>
                  <div class="col-sm-10">
                    <select name="lesson_faculty" class="form-select" id="lesson_faculty" aria-label="Faculty">
                      <option value="" disabled selected>Select Faculty</option>
                        <option value="Biznes və menecment">Biznes və menecment</option>
                        <option value="İqtisadiyyat və idarəetmə">İqtisadiyyat və idarəetmə</option>
                    </select>
                  </div>
                </div>


                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label" for="lesson_course">Course</label>
                  <div class="col-sm-10">
                    <select name="lesson_course" class="form-select" id="lesson_course" aria-label="Default select example">
                      <option value="" disabled selected>Select Course</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                    </select>
                  </div>
                </div>

                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label" for="lesson_semester">Semester</label>
                  <div class="col-sm-10">
                    <select name="lesson_semester" class="form-select" id="lesson_semester" aria-label="Default select example">
                      <option value="" disabled selected>Select Semester</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                  </div>
                </div>


                <div class="row justify-content-end">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Send</button>
                  </div>
                </div>
              </form>              
        </div>
      </div>
    </div>
  </div>
</div>
<!-- / Content -->

