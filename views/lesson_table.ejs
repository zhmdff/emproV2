<%- include('./includes/head') %>
<%- include('./includes/aside', { path: path }) %>
<%- include('./includes/navbar', { username: username }) %>

<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Lesson /</span> Lesson List</h4>

    <!-- Bordered Table -->
    <div class="card">
        <h5 class="card-header">All Lessons</h5>
        <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Faculty</th>
                            <th>Course</th>
                            <th>Semester</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% info.forEach((row) => { %>
                        <tr>
                            <td><%= row.lesson_name %></td>
                            <td><%= row.lesson_faculty %></td>
                            <td><%= row.lesson_course %></td>
                            <td><%= row.lesson_semester %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/ Bordered Table -->

</div>
<!-- / Content -->

<%- include('./includes/footer') %>
<%- include('./includes/foot') %>
